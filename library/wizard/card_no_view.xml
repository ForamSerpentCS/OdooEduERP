<?xml version="1.0" encoding="utf-8"?>

<odoo>

        <!-- Form View Of Card Number Wizard -->

        <record id="view_card_number_form" model="ir.ui.view">
            <field name="name">card.number.form</field>
            <field name="model">card.number</field>
            <field name="arch" type="xml">
                <form string="Card Number">
                    <group>
                       <field name="card_id" widget="selection"/>
                   </group>
                   <footer>
                       <group col="2">
                            <button type='object' class="fa fa-id-card-o" name='card_number_ok' string='Card No'/>
                            <button class="fa fa-ban" special='cancel' string='Cancel'/>
                       </group>
                   </footer>
               </form>
            </field>
        </record>

        <!-- Action Of Form View Of Card Number Wizard -->

        <record id="card_number_ok" model="ir.actions.act_window">
            <field name="name">Card Number</field>
            <field name="res_model">card.number</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="library.model_library_book_issue"/>
            <field name="binding_view_types">form</field>
            <field name="groups_id" eval="[(4, ref('library.group_librarian'))]"/>
        </record>

</odoo>
