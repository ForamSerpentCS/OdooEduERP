<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>

        <!-- Form View Of View Daily Attendance Wizard -->

        <record id="view_daily_attendance_form_2" model="ir.ui.view">
            <field name="name">view.daily.attendance.form</field>
            <field name="model">attendance.report</field>
            <field name="arch" type="xml">
                <form string="Attendance Report">
                    <separator string="Standard Information" colspan="4"/>
                    <group col="6" colspan="4">
                        <field name="standard_id"  widget="selection"  />
                    </group>
                    <group colspan="4" col="6">
                        <button  icon="gtk-cancel" special="cancel" string="Cancel"/>
                        <button name="print_report" string="Print Report" type="object"/>
                    </group>
                </form>
            </field>
        </record>

        <!-- Action Of Form View Of Daily Attendance Wizard -->

        <record id="action_attendance" model="ir.actions.act_window">
            <field name="name">Reporting</field>
            <field name="res_model">attendance.report</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_daily_attendance_form_2"/>
            <field name="target">new</field>
        </record>

        <!-- Menu Item Of Reporting -->

        <menuitem id="menu_reporting" name="Reporting" parent="school.menu_school"/>

        <menuitem id="menu_attendance_report" name="Attendance" parent="menu_reporting"/>

        <menuitem id="menu_attendance_sheet_form" parent="menu_attendance_report" action="action_attendance"/>

    </data>
</openerp>