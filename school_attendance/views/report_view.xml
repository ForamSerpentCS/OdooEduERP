<odoo>
    <record id="paperformat_euro_lowmargin_attendance" model="report.paperformat">
            <field name="name">European A4 low margin Attendance</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">0</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">0</field>
            <field name="margin_right">5</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">0</field>
            <field name="dpi">90</field>
	</record>

    <report id="attendace_month_report"
                    string="Student Attendances by Month"
                    model="student.student"
                    report_type="qweb-pdf"
                    file="school_attendance.attendance_month"
                    name="school_attendance.attendance_month"
                    paperformat="school_attendance.paperformat_euro_lowmargin_attendance"/>
</odoo>