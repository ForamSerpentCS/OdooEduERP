<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_employee_form" model="ir.ui.view">
        <field name="name">hr.employee.form.inherit.hr.fleet</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form" />
        <field name="arch" type="xml">
             <xpath expr="//div[@name='button_box']" position="after">
                 <field name="is_student" invisible="1" />
            </xpath>
        </field>
    </record>
    
    <record id="student_attendance_hr_action" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">hr.employee</field>
        <field name="view_mode">kanban,tree,form,activity</field>
        <field name="domain">[('is_student', '=', True)]</field>
        <field name="context">{'chat_icon': True}</field>
        <field name="search_view_id" ref="hr.view_employee_filter"/>
    </record>

    <record id="student_hr_attendance_action" model="ir.actions.act_window">
        <field name="name">Students Attendances</field>
        <field name="res_model">hr.attendance</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{"search_default_today":1}</field>
        <field name="domain">[('employee_id.is_student', '=', True)]</field>
        <field name="search_view_id" ref="hr_attendance.hr_attendance_view_filter" />
    </record>

